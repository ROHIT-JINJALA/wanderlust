<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2" >
    <h3>Edit aListing</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
      <!-- title -->
      <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
        <input
          name="listing[title]"
          required
          type="text"
          value="<%= listing.title%>"
          class="form-control"
        />
        <div class="valid-feedback">Title looks good</div>
      </div>

      <!-- description -->
      <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
        <textarea
          name="listing[description]"
          required
          class="form-control"
        ><%= listing.description%></textarea>
        <div class="invalid-feedback">Description should be small.</div>
      </div>

      <!-- image -->
      <div class="mb-3">
        <label for="image" class="form-lable">Original listing Image: </label><br>
        <img src="<%= originalImageUrl %>"  alt="<%= listing.title %>">
      </div>
      <div class="mb-3">
        <label for="image" class="form-lable">Uplode new Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
        />
      </div>

      <div class="row">
        <!-- price -->
        <div class="mb-3 col-md-4">
          <label for="price" class="form-lable">Price</label>
          <input
            name="listing[price]"
            type="number"
            required
            value="<%= listing.price %>"
            class="form-control"
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <!-- country -->
        <div class="mb-3 col-md-8">
          <label for="country" class="form-lable">Country</label>
          <input
            name="listing[country]"
            required
            type="text"
            value="<%= listing.country%>"
            class="form-control"
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>

      <!-- location -->
      <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
        <input
          name="listing[location]"
          required
          type="text"
          value="<%= listing.location %>"
          class="form-control"
        />
        <div class="invalid-feedback">location should be valid</div>
      </div>

      <button class="btn btn-dark add-btn mt-3 mb-3">Edit</button>
      <br /><br />
    </form>
  </div>
</div>