<% layout("./layouts/boilerplate.ejs") %>
<script>
    let mapToken = "<%= process.env.MAP_TOKEN %>";
    let listing = <%- JSON.stringify(listing) %>;
</script>
<style>
    body {
        background-color: #f9fafb;
        font-family: 'Inter', sans-serif;
        color: #2d3748;
    }
    .show-container {
        margin: 1.25rem auto;
        padding: 0 0.75rem;
        max-width: 1200px;
    }
    .show-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.07);
        overflow: hidden;
        margin-bottom: 1.25rem;
        transition: transform 0.2s ease;
    }
    .show-card:hover {
        transform: translateY(-4px);
    }
    .show-img {
        object-fit: cover;
        height: 550px;
        width: 100%;
    }
    
.show-img {
    display: block;
    width: 100% !important;
    height: 420px !important; /* Increased height */
    object-fit: cover;
    border-radius: 10px 10px 0 0;
}
@media (max-width: 768px) {
    .show-img {
        height: 520px !important;
    }
}
@media (max-width: 480px) {
    .show-img {
        height: 400px !important;
    }
}


    .card-body {
        padding: 0.9rem;
    }
    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1a202c;
        margin-bottom: 0.5rem;
    }
    .card-text {
        color: #4a5568;
        font-size: 0.9rem;
        margin-bottom: 0.6rem;
    }
    .review-form {
        background-color: #fff;
        padding: 0.9rem;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        margin-bottom: 1.25rem;
    }
    .review-card {
        border: none;
        border-radius: 6px;
        box-shadow: 0 1px 6px rgba(0, 0, 0, 0.05);
        margin-bottom: 0.75rem;
        padding: 0.6rem;
    }
    .review-card .card-title {
        font-size: 0.9rem;
        font-weight: 500;
    }
    .review-card .card-text {
        font-size: 0.8rem;
        color: #718096;
    }
    .btn-dark, .btn-danger, .btn-outline-dark {
        border-radius: 5px;
        padding: 0.35rem 0.9rem;
        font-size: 0.85rem;
        font-weight: 500;
        transition: background-color 0.2s ease;
    }
    .btn-dark:hover, .btn-outline-dark:hover {
        background-color: #2d3748;
        color: #fff;
    }
    .btn-danger:hover {
        background-color: #c53030;
    }
    #map {
        height: 220px;
        border-radius: 6px;
        margin-bottom: 1.25rem;
        border: 1px solid #e2e8f0;
    }
    .starability-slot {
        transform: scale(0.7);
        margin-bottom: 0.4rem;
    }
    .starability-slot legend {
        font-size: 0.85rem;
        font-weight: 500;
        color: #4a5568;
    }
    .starability-slot label {
        font-size: 0.75rem;
    }
    .starability-result {
        transform: scale(0.7);
        margin-bottom: 0.4rem;
    }
    .form-label {
        font-size: 0.85rem;
        font-weight: 500;
    }
    .form-control {
        font-size: 0.8rem;
        padding: 0.4rem;
    }
    .invalid-feedback {
        font-size: 0.7rem;
    }
    .review-section h4 {
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
    }
    @media (max-width: 768px) {
        .show-img {
            height: 180px;
        }
        .card-title {
            font-size: 1.3rem;
        }
        .card-text {
            font-size: 0.85rem;
        }
        .review-card .card-title {
            font-size: 0.85rem;
        }
        .review-card .card-text {
            font-size: 0.75rem;
        }
        .show-container {
            padding: 0 0.5rem;
        }
        #map {
            height: 180px;
        }
        .btn-dark, .btn-danger, .btn-outline-dark {
            padding: 0.25rem 0.7rem;
            font-size: 0.8rem;
        }
        .review-section h4 {
            font-size: 1rem;
        }
    }
</style>

<body>
    <div class="show-container">
        <% if (listing) { %>
        <div class="row">
            <!-- Left Side: Image and Description -->
            <div class="col-lg-6 col-md-12 mb-3">
                <h3 class="card-title mb-2"><%= listing.title %></h3>
                <div class="show-card">
                    <img src="<%= listing.image.url %>" class="show-img" alt="listing image" />
                    <div class="card-body">
                        <p class="card-text">Owned by <b><%= listing.owner.username %></b></p>
                        <p class="card-text"><%= listing.description %></p>
                        <p class="card-text">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
                        <p class="card-text"><%= listing.location %></p>
                        <p class="card-text"><%= listing.country %></p>
                        <div class="d-flex gap-2">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
                            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side: Reviews and Map -->
            <div class="col-lg-6 col-md-12">
                <!-- Review Form -->
                <% if (currUser) { %>
                <div class="review-form">
                    <h4 class="mb-2">Leave a Review</h4>
                    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                        <div class="mb-2">
                            <fieldset class="starability-slot">
                                <legend>Rating:</legend>
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div class="mb-2">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
                            <div class="invalid-feedback">Please fill some comment for review.</div>
                        </div>
                        <div class="mb-2">
                            <button class="btn btn-outline-dark">Submit</button>
                        </div>
                    </form>
                </div>
                <% } %>

                <!-- Reviews List -->
                <% if (listing.reviews && listing.reviews.length > 0) { %>
                <div class="review-section">
                    <h4>Reviews</h4>
                    <div class="row">
                        <% for (review of listing.reviews) { %>
                        <div class="col-md-6 col-12">
                            <div class="review-card">
                                <div class="card-body">
                                    <h5 class="card-title">@<%= review.author.username %></h5>
                                    <p class="card-text"><%= review.comment %></p>
                                    <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-dark">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% } %>

                <!-- Map Section -->
                <h3 class="mt-2 mb-2">Where you'll be</h3>
                <div id="map"></div>
            </div>
        </div>
        <% } else { %>
        <div class="col-12 text-center">
            <h3 class="card-title">Listing Not Found</h3>
            <p class="card-text">Sorry, we couldn't find the listing you're looking for.</p>
        </div>
        <% } %>
    </div>
    <script src="/js/map.js"></script>
</body>