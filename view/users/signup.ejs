<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
   <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
   <div class="col-6 offset-3">
      <form action="/signup" method="POST" novalidate class="needs-validation">

         <!-- username -->
         <div class="mb-3">
            <label for="username" class="form-lable">Username</label>
            <input
              name="username"
              id="username"
              required
              type="text"
              class="form-control"
            />
            <div class="valid-feedback">Username looks good</div>
          </div>

          <!-- email -->
          <div class="mb-3">
            <label for="email" class="form-lable">Email</label>
            <input
              name="email"
              id="email"
              required
              type="email"
              class="form-control"
            />
          </div>

          <!-- password -->
          <div class="mb-3">
            <label for="password" class="form-lable">Password</label>
            <input
              name="password"
              id="password"
              required
              type="password"
              class="form-control"
            />
          </div>

          <button class="btn btn-success">Sign Up</button>
      </form>
   </div>
</div>